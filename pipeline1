pipeline { 
    agent any 
    stages {
        stage('clone repo') { 
            steps { 
            
                sh 'git clone https://github.com/indraindrajit71/my-app.git'
                sh '/opt/maven/bin/mvn clean -f my-app'
                
            }
        }
        stage('Test'){
            steps {
                sh '/opt/maven/bin/mvn test -f my-app'
                
            }
        }
        stage('Deploy') {
            steps {
                sh '/opt/maven/bin/mvn package -f my-app'
                
            }
        }

        stage('Status') {
            steps {
                sh 'echo "The testing was Passed"'
                
            }
        }
    }
}
